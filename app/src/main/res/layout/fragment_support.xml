<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.Support">

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:layout_marginTop="32dp"
               android:layout_marginStart="22dp"
               android:id="@+id/back"
               app:srcCompat="@drawable/right_arrow_1"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Служба поддержки"
              android:textSize="18sp"
              android:textStyle="bold"
              android:fontFamily="@font/roboto"
              android:layout_marginTop="26dp"
              android:layout_marginStart="54dp"
              android:textColor="#C4C4C4"/>


    <ImageView
            android:layout_marginTop="27dp"
            android:layout_marginEnd="28dp"
            android:id="@+id/menu"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cancel__1__2"/>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="24 июня "
              android:fontFamily="@font/roboto"
              android:layout_marginTop="70dp"
              android:layout_gravity="center_horizontal"
              android:textSize="10sp"
              android:textColor="#C4C4C4"/>

    <FrameLayout
            android:layout_width="169dp"
            android:layout_height="55dp"
            android:background="@drawable/supportback"
            android:layout_marginTop="94dp"
            android:layout_marginStart="54dp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Чем можем помочь?"
                  android:fontFamily="@font/roboto"
                  android:textSize="14sp"
                  android:layout_marginTop="7dp"
                  android:textColor="@color/black"
                  android:layout_marginStart="8dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="14:13"
                  android:textColor="@color/black"
                  android:fontFamily="@font/roboto"
                  android:textSize="10sp"
                  android:layout_marginTop="36dp"
                  android:layout_marginEnd="10dp"
                  android:layout_gravity="end"/>
    </FrameLayout>

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:background="@drawable/running_1"
               android:layout_marginTop="115dp"
               android:layout_marginStart="12dp"/>

    <View android:layout_width="match_parent" android:layout_height="2dp"
          android:background="#F1F4FA"
          android:layout_gravity="bottom"
          android:layout_marginBottom="82dp"/>
    
    <EditText android:layout_width="match_parent" android:layout_height="81dp"
              android:layout_gravity="bottom"
              android:hint="напишите сообщение"
              android:layout_marginStart="29dp"
              android:layout_marginEnd="60dp"
              android:backgroundTint="@color/white"/>
    
    <ImageView android:layout_width="31dp" android:layout_height="31dp"
               android:background = "@drawable/group_33"
               android:layout_marginBottom="31dp"
               android:layout_marginEnd="22dp"
               android:layout_gravity="bottom|end"/>

</FrameLayout>