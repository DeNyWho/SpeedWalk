<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#F6F6F6"
             tools:context=".fragments.buy_list">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="86dp"
              android:layout_marginStart="21dp"
              android:text="Способ оплаты"
              android:fontFamily="@font/helvetica_regular"
              android:textSize="18sp"
              android:textStyle="bold"
              android:textColor="@color/black"/>


    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:layout_marginTop="32dp"
               android:id="@+id/back"
               android:layout_marginStart="21dp"
               app:srcCompat="@drawable/right_arrow_1"/>
    
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="70dp"
                 android:id="@+id/nal"
                 android:background="@drawable/back_buy"
                 android:layout_marginTop="126dp"
                 android:layout_marginStart="22dp"
                 android:layout_marginEnd="29dp">

        <ImageView android:layout_width="26dp" android:layout_height="26dp"
                   android:layout_marginTop="15dp"
                   android:layout_marginStart="14dp"
                   android:background="@drawable/group_32"/>
        

        
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Наличные"
                  android:fontFamily="@font/helvetica_regular"
                  android:textStyle="bold"
                  android:textSize="14sp"
                  android:layout_marginTop="12dp"
                  android:layout_marginStart="53dp"
                  android:textColor="@color/black"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Просьба подготовить без сдачи"
                  android:layout_marginTop="31dp"
                  android:layout_marginStart="53dp"
                  android:fontFamily="@font/helvetica_regular"
                  android:textSize="10sp"
                  android:textStyle="bold"
                  android:textColor="#C4C4C4"/>

    </FrameLayout>


    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="70dp"
                 android:id="@+id/card"
                 android:background="@drawable/back_buy"
                 android:layout_marginTop="206dp"
                 android:layout_marginStart="22dp"
                 android:layout_marginEnd="29dp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Картой курьеру"
                  android:fontFamily="@font/helvetica_regular"
                  android:textStyle="bold"
                  android:textSize="14sp"
                  android:layout_marginTop="12dp"
                  android:layout_marginStart="53dp"
                  android:textColor="@color/black"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Оплата на месте"
                  android:layout_marginTop="31dp"
                  android:layout_marginStart="53dp"
                  android:fontFamily="@font/helvetica_regular"
                  android:textSize="10sp"
                  android:textStyle="bold"
                  android:textColor="#C4C4C4"/>

        <ImageView android:layout_width="26dp" android:layout_height="26dp"
                   android:layout_marginTop="15dp"
                   android:layout_marginStart="14dp"
                   android:background="@drawable/group_31"/>
        
        
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton android:layout_width="match_parent" android:layout_height="43dp"
                                               android:layout_marginStart="57dp"
                                               android:layout_marginEnd="57dp"
                                               android:layout_marginBottom="52dp"
                                               android:id="@+id/next"
                                               android:layout_gravity="bottom"
                                               android:background="@drawable/btn_go_cart"
                                               android:text="Подтвердить заказ"
                                               android:fontFamily="@font/helvetica_regular"
                                               android:textSize="18sp"
                                               android:textStyle="bold"
                                               android:textColor="@color/white"
                                               android:textAllCaps="false"/>
    
    
</FrameLayout>