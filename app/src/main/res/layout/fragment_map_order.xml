<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.MapOrder">

    <com.yandex.mapkit.mapview.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <androidx.appcompat.widget.AppCompatButton android:layout_width="40dp" android:layout_height="40dp"
                                               android:background="@drawable/group_29"
                                               android:layout_marginTop="30dp"
                                               android:id="@+id/back"
                                               android:layout_marginStart="17dp"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="74dp"
                 android:background="@drawable/bottom_map"
                 android:layout_gravity="bottom">

        
        
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Курьер в пути"
                  android:fontFamily="@font/lora"
                  android:textColor="@color/white"
                  android:textStyle="bold"
                  android:layout_marginTop="14dp"
                  android:layout_marginStart="28dp"
                  android:textSize="18sp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Статус заказа: заказ собирается"
                  android:textSize="14sp"
                  android:textColor="@color/white"
                  android:layout_marginTop="37dp"
                  android:layout_marginStart="28dp"
                  android:fontFamily="@font/lora"/>

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:layout_marginEnd="19dp"
                   android:layout_marginTop="16dp"
                   android:background="@drawable/group_25"
                   android:layout_gravity="end"/>

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:layout_marginEnd="76dp"
                   android:layout_marginTop="19dp"
                   android:background="@drawable/group_26"
                   android:layout_gravity="end"/>

    </FrameLayout>

</FrameLayout>